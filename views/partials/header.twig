<header>

    <nav class="navbar" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
        <a class="navbar-item" href="/">
        <img src="https://bulma.io/images/bulma-logo.png" width="112" height="28">
        </a>

        <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
        </a>
    </div>

    <div id="navbarBasicExample" class="navbar-menu">
        <div class="navbar-start">
            {% for item in menu.items %}
            <a href={{item.link}} class="navbar-item">
                {{item.title}}
            </a>
            {% endfor %}
        </div>
        <div class="navbar-end">
        <div class="navbar-item">
            <div class="buttons">
            {% if fn('is_user_logged_in') %}
            {% if fn('wp_get_current_user') %}
             <p style="margin-right: 16px;">{{get_log_usernamme()}}</p>
            
            {% endif %}
                <a class="button is-light" href="{{function('wp_logout_url')}}">
                    Log out
                </a>
            {% else %}
                <a class="button is-primary" href="{{function('site_url')}}/signup">
                    <strong>Sign up</strong>
                </a>
                <a class="button is-light" href="{{function('site_url')}}/login">
                    Log in
                </a>
            {% endif %}
            </div>
        </div>
        </div>
    </div>
    </nav>
</header>