{% extends "base.twig" %}
    
{% block content %}
    {% if user_id.get_error_message() %}
        <div class='signup-error'>{{user_id.get_error_messages()[0]}}</div>
    {% endif %}
    <form action='/signup/' method='post'>
    
        <div class="field">
        <p class="control has-icons-left has-icons-right">
            <input class="input" type="text" placeholder="Username" name="user_login">
            <span class="icon is-small is-left">
            <i class="fas fa-envelope"></i>
            </span>
            <span class="icon is-small is-right">
            <i class="fas fa-check"></i>
            </span>
        </p>
        </div>
        <div class="field">
        <p class="control has-icons-left has-icons-right">
            <input class="input" type="email" placeholder="Email" name="user_email">
            <span class="icon is-small is-left">
            <i class="fas fa-envelope"></i>
            </span>
            <span class="icon is-small is-right">
            <i class="fas fa-check"></i>
            </span>
        </p>
        </div>
        <div class="field">
        <p class="control has-icons-left">
            <input class="input" type="password" placeholder="Password" name="user_pass">
            <span class="icon is-small is-left">
            <i class="fas fa-lock"></i>
            </span>
        </p>
        </div>
        <div class="field">
        <p class="control">
            <button class="button is-success">
            Singup
            </button>
        </p>
        </div>
        
        {% if user_id['errors'] %}
        <p>ERREUR !!!</p>
        {% endif %}

    </form>


    
{% endblock %}